{
  "$schema": "https://json.schemastore.org/package",
  "name": "read-nodejs-package-version",
  "version": "1.0.0",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/main.js",
  "scripts": {
    "tsconfig-generate-app": "node tsconfig-generate-app",
    "lint": "npm run tsconfig-generate-app && eslint --fix src/**/*.[jt]s",
    "test": "jest --passWithNoTests",
    "compile": "npm run lint && rimraf build && tsc --rootDir src --outDir build",
    "dist": "npm run compile && rimraf dist && ncc build build/main.js --out dist",
    "build": "npm run dist && npm run test"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "semver": "7.3.4"
  },
  "devDependencies": {
    "@types/node": "14.14.28",
    "@types/semver": "7.3.4",
    "@typescript-eslint/parser": "4.15.1",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.20.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-github": "4.1.1",
    "eslint-plugin-jest": "24.1.5",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.1",
    "typescript": "4.1.5"
  }
}
